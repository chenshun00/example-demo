<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.chenshun00.springcloud.provider.mapper.BookMapper">

    <select id="getBookByAuthor" resultType="io.github.chenshun00.springcloud.api.Book">
        select `id`, `author`, publish_date as publishDate, `name`
        from book
        where author = #{author}
    </select>

</mapper>